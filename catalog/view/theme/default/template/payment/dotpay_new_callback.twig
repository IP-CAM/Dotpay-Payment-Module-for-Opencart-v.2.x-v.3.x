{{ header }}
<style>.status_dotpay { font-size: 16px;}</style>
<div class="container">    
    <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
    </ul>
    <div class="row">        
        <div id="content" class="col-lg-12">
            <h1>{{ heading_title }}</h1>
            <hr>
            <span class="status_dotpay">{{ text_dotpay_info }}</span><br>            
            <div class="buttons">
                <div class="pull-right"><a href="{{ action_continue }}" class="btn btn-primary">{{ button_continue }}</a></div>
            </div>            
        </div>        
    </div>
</div>
{{ footer }}